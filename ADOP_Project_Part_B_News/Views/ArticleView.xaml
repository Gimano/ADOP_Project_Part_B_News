<?xml version="1.0" encoding="UTF-8"?>
<ContentPage    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADOP_Project_Part_B_News.Views.ArticleView"
                x:Name="thisPage">
    <ContentPage.Content>
        <ScrollView>
        <WebView Source="{Binding .}" 
                 WidthRequest="{Binding Source={x:Reference thisPage}, Path=Width}"
                 HeightRequest="{Binding Source={x:Reference thisPage}, Path=Height}"/>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
